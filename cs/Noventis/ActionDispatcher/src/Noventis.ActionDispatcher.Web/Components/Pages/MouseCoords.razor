@page "/mousecoords"
@rendermode InteractiveServer

<h3>Coordinate Tracker</h3>

<div class="coordinate-display">
    <p>Hover Position: (@hoverX, @hoverY)</p>
    @if (mouseDownX >= 0 && mouseDownY >= 0)
    {
        <p>Last Mouse Down: (@mouseDownX, @mouseDownY)</p>
    }
    @if (clickX >= 0 && clickY >= 0)
    {
        <p>Last Click: (@clickX, @clickY)</p>
    }
    @if (releaseX >= 0 && releaseY >= 0)
    {
        <p>Last Release: (@releaseX, @releaseY)</p>
    }
    <!-- Difference between Mouse Down and Release -->
    @if (mouseDownX >= 0 && mouseDownY >= 0 && releaseX >= 0 && releaseY >= 0)
    {
        <p>Difference (Release - Mouse Down): (@(releaseX - mouseDownX), @(releaseY - mouseDownY))</p>
    }
</div>

<div class="coordinate-box"
     @onmousemove="HandleMouseMove"
     @onmousedown="HandleMouseDown"
     @onclick="HandleClick"
     @onmouseup="HandleMouseUp"
     @onmouseleave="HandleMouseLeave">
</div>

<br />
<button class="btn btn-primary" @onclick="MouseClickAction">Click</button>

<button class="btn btn-secondary" @onclick="MouseRightClickAction">Right Click</button

<style>
    .coordinate-box {
        width: 512px;
        height: 320px;
        border: 2px solid #333;
        background-color: #f0f0f0;
        cursor: crosshair;
        position: relative;
    }

        .coordinate-box:hover {
            background-color: #e0e0e0;
        }

    .coordinate-display {
        margin-bottom: 10px;
        font-family: monospace;
        font-size: 14px;
    }

        .coordinate-display p {
            margin: 5px 0;
        }
</style>
